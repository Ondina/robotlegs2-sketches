<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		alpha.disabled=".5">
	<fx:Script>
		<![CDATA[
			static private const RadiusX:Number=4;
			static private const RadiusY:Number=4;
			static private const TextSize:Number=11;
			static private const TextColor:Number=0x787A6E;
		]]>
	</fx:Script>
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.default.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata>
	<!-- states -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>

	<s:Rect id="rect"
			radiusX="{RadiusX}"
			radiusY="{RadiusY}"
			top="0"
			right="0"
			bottom="0"
			left="0">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xFFFFFF"
								 color.over="0xFFFFFF"
								 color.down="0xFFFFFF"
								 alpha="1"/>
				<s:GradientEntry color="0xCEC9B6"
								 color.over="0xD2DFB3"
								 color.down="0xC3CEA8"
								 alpha="1"/>
			</s:LinearGradient>
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="0xCCCCCC"
								weight=".5"/>
		</s:stroke>
	</s:Rect>
	<!-- text -->
	<s:Label color="{TextColor}"
			 text="{hostComponent.label}"
			 fontWeight="bold"
			 fontSize="{TextSize}"
			 textAlign="center"
			 verticalAlign="middle"
			 horizontalCenter="0"
			 verticalCenter="1"
			 left="12"
			 right="12"
			 top="6"
			 bottom="6"/>
</s:Skin>
